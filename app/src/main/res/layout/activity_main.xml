<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dk.easj.anbo.preferenceexample.MainActivity">

    <Button
        android:id="@+id/buttonPreferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLoad"
        android:text="Load Preferences Screen" />

    <Button
        android:id="@+id/buttonDisplayValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDisplay"
        android:text="Display Preferences Values" />

    <EditText
        android:id="@+id/txtString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonModifyValues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickModify"
        android:text="Modify Preference Values" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</LinearLayout>
